# EditorConfig: http://editorconfig.org
# Global EditorConfig
# top-most EditorConfig file
root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
max_line_length = 120
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false
indent_size = 4

[git*,.git/config,*.*rc]
indent_style = tab
indent_size = 2
