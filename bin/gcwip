#!/usr/bin/env zsh
#
# gcwip
# - Adds timestamp to commit message.
# - Accepts a message as an argument.
#-------------------------------------------------------------------------------

set -e

echo "gcwip [$@]"
git commit --no-verify --no-gpg-sign -m "--wip-- [$(date "+%Y-%m-%d %H:%M:%S")] [skip ci] $@"

